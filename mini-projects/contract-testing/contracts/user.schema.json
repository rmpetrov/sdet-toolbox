{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "User",
  "type": "object",
  "required": ["id", "email", "name", "isActive"],
  "properties": {
    "id": {"type": "integer"},
    "email": {"type": "string", "format": "email"},
    "name": {"type": "string"},
    "isActive": {"type": "boolean"},
    "role": {"type": "string"}
  },
  "additionalProperties": false
}
